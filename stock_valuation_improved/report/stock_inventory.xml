<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <report
            id="stock_inventory_report_valued"
            string="Stock Inventory Valued"
            model="stock.inventory"
            report_type="qweb-pdf"
            file="stock_valuation_improved.stock_inventory_valued"
            name="stock_valuation_improved.stock_inventory_valued"
    />

    <template id="stock_inventory_valued">
        <t t-name="stock_valuation_improved.stock_inventory_valued">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.external_layout">
                        <div class="page">

                            <h2>
                                Stock Inventory
                            </h2>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>
                                            <strong>Inventory</strong>
                                        </th>
                                        <th>
                                            <strong>Location</strong>
                                        </th>
                                        <th>
                                            <strong>Date</strong>
                                        </th>
                                        <th>
                                            <strong>Total Value</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <span t-field="o.name"/>
                                        </td>
                                        <td>
                                            <span t-field="o.location_id"/>
                                        </td>
                                        <td>
                                            <span t-field="o.date"/>
                                        </td>
                                        <td>
                                            <span t-field="o.total_value"/>
                                            €
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>
                                            <strong>Location</strong>
                                        </th>
                                        <th>
                                            <strong>Product</strong>
                                        </th>
                                        <th width="100px" class="text-right">
                                            <strong>Checked quantity</strong>
                                        </th>
                                        <th width="100px" class="text-right">
                                            <strong>Unit Value</strong>
                                        </th>
                                        <th width="100px" class="text-right">
                                            <strong>Value</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tr t-foreach="o.line_ids" t-as="line">
                                    <t t-if="line.product_qty > 0">
                                        <td>
                                            <span t-field="line.location_id"/>
                                        </td>
                                        <td>
                                            <span t-field="line.product_id"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.product_qty"/>
                                            <span t-field="line.product_uom_id" groups="product.group_uom"/>
                                        </td>
                                        <td class="text-right">
                                            <t t-set="unit_value" t-value="line.value / line.product_qty"/>
                                            <t t-esc="unit_value"/>
                                            €
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.value"/>
                                            €
                                        </td>
                                    </t>
                                </tr>
                            </table>
                            <div class="row">
                                <div class="col-xs-4 pull-right">
                                    <table class="table table-condensed">
                                        <tr class="border-black">
                                            <td>
                                                <strong>Total Quantity</strong>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="o.total_qty"/>
                                                <span t-field="o.product_id.uom_id"/>
                                            </td>
                                        </tr>
                                        <tr class="border-black">
                                            <td>
                                                <strong>Total Value</strong>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="o.total_value"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>
</odoo>
