<odoo>
    <t t-name="barcode_scanner.home">

        <div class="col-xs-12">
            <h3 class="text-center mb24">Barcode Scanner</h3>
        </div>
        <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
            <img class="img-responsive" src="/barcode_scanner/static/src/image/barcode.jpg"/>
        </div>
        <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
            <button id="tap_to_scan_button" class="btn btn-default btn-block">TAP TO USE CAMERA</button>
        </div>
        <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
            <p class="text-center">You can directly scan a product or a location with a scanner or use your camera.</p>
        </div>
        <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
            <button id="products_button" class="btn btn-default btn-block btn-space">PRODUCTS</button>
        </div>
        <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
            <button id="partners_button" class="btn btn-default btn-block btn-space">PARTNERS</button>
        </div>
        <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
            <button id="inventory_button" class="btn btn-default btn-block btn-space">INVENTORY</button>
        </div>
    </t>
</odoo>