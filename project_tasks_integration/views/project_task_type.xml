<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="project_task_type_improvements_form_view" model="ir.ui.view">
        <field name="name">project_task_type_improvements_form_view</field>
        <field name="model">project.task.type</field>
        <field name="inherit_id" ref="project.task_type_edit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='fold']" position="after">
                <field name="need_estimate"/>
            </xpath>
            <xpath expr="//field[@name='fold']" position="after">
                <field name="need_user_assignation" />
            </xpath>
        </field>
    </record>
</odoo>