<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <record model="ir.ui.view" id="edit_project_warning_text">
           <field name="name">edit_project_warning_text</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='misc']" position="inside">
                    <group string="Warning Texts for Tasks and Issues" name="warning_text">
                        <field name="warning_text" widget="html" nolabel="1" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
